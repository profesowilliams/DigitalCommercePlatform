<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Vidyard Video"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <videoId
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Select Video Id here"
                        fieldLabel=" Video Id"
                        name="./videoId"
                        required="{Boolean}true"/>
                    <type
                        granite:class="cq-dialog-dropdown-showhide"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Choose social icon"
                        fieldLabel="Type"
                        name="./type">
                        <items jcr:primaryType="nt:unstructured">
                            <inline
                                jcr:primaryType="nt:unstructured"
                                text="Inline"
                                value="inline"/>
                            <lightbox
                                jcr:primaryType="nt:unstructured"
                                text="LightBox"
                                value="lightbox"/>
                            <thumbnail
                                jcr:primaryType="nt:unstructured"
                                text="Thumbnail"
                                value="thumbnail"/>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            cq-dialog-dropdown-showhide-target=".type-showhide-target"/>
                    </type>
                    <inline
                        granite:class="type-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="inline"/>
                        <items jcr:primaryType="nt:unstructured">
                            <autoplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, Video will play automatically"
                                name="./inlineAutoplay"
                                text="AutoPlay"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </inline>
                    <thumbnail
                        granite:class="type-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="thumbnail"/>
                        <items jcr:primaryType="nt:unstructured">
                            <openLinkInNewTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, Opens the link in new tab."
                                name="./openLinkInNewTab"
                                text="Open Links In New Tab"
                                uncheckedValue="false"
                                value="true"/>
                            <autoplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, Video will play automatically"
                                name="./thumbnailAutoplay"
                                text="AutoPlay"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </thumbnail>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
