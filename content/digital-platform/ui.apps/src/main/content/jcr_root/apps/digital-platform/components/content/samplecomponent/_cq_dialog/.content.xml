<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Properties" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <url jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Api url" name="./url" />
                    <dropdown granite:class="cq-dialog-dropdown-showhide" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Method" name="./method">
                        <granite:data jcr:primaryType="nt:unstructured" cq-dialog-dropdown-showhide-target=".option-showhide-target" />
                        <items jcr:primaryType="nt:unstructured">
                            <get jcr:primaryType="nt:unstructured" text="GET" value="get" />
                            <post jcr:primaryType="nt:unstructured" text="POST" value="post" />
                        </items>
                    </dropdown>
                    <json granite:class="hide option-showhide-target" jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" text="JSON string" name="./json">
                        <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="post" />
                    </json>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
