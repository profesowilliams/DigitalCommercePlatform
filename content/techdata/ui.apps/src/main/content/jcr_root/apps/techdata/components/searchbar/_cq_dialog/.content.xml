<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Quick Search"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_search_v1"
    trackingFeature="core-components:search:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <searchRoot
                                                jcr:primaryType="nt:unstructured"
                                                sling:hideResource="{Boolean}true"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                            <placeholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Placeholder for text input."
                                                fieldLabel="Placeholder"
                                                name="./placeholder"/>
                                            <searchDomain
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Search Domain"
                                                    fieldLabel="Search Domain"
                                                    name="./searchDomain"/>
                                            <typeAheadDomain
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Type Head Domain"
                                                    fieldLabel="Type Head Domain"
                                                    name="./typeAheadDomain"/>
                                            <placeholder
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Placeholder for text input."
                                                    fieldLabel="Placeholder"
                                                    name="./placeholder"/>
                                            <areaList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Area List">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    required="true"
                                                    name="./areaList">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <area
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Select List of options"
                                                                required="true"
                                                                name="./area">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <all
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="All"
                                                                        value="all"/>
                                                                <products
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Products"
                                                                        value="product"/>
                                                                <content
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Content"
                                                                        value="content"/>
                                                                <quotes
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Quotes"
                                                                        value="quote"/>
                                                                <orders
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Orders"
                                                                        value="order"/>
                                                                <spas
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="SPAs"
                                                                        value="spa"/>
                                                            </items>
                                                        </area>
                                                        <areaLabel
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter Area Label"
                                                                fieldLabel="Area Label"
                                                                required="true"
                                                                name="./areaLabel"/>
                                                        <areaEndPoint
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter Endpoint"
                                                                fieldLabel="Endpoint"
                                                                name="./areaEndpoint"
                                                                />
                                                        <areaSuggestionEndPoint
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter Suggestion URL"
                                                                fieldLabel="Suggestion URL"
                                                                name="./areaSuggestionEndPoint"
                                                                />
                                                    </items>
                                                </field>
                                            </areaList>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
