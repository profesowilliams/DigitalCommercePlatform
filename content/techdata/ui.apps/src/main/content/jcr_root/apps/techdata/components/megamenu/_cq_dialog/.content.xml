<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Mega Menu"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_carousel_v1">
    <content
        granite:class="cmp-carousel__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <menuList
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configure Mega Menu List"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <actions
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldDescription="Click 'Add' to add links."
                                composite="{Boolean}true">
                                <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                    jcr:primaryType="nt:unstructured"
                                    name="./menuList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <label
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Title"
                                                    fieldDescription="Enter Title"
                                                    jcr:primaryType="nt:unstructured"
                                                    name="./platformName" />
                                                <linkUrl
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Link"
                                                    fieldDescription="Enter link"
                                                    jcr:primaryType="nt:unstructured"
                                                    rootPath="/content/techdata"
                                                    name="./linkUrl" />
                                                <linkTarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Select this if the link has to open in a new tab"
                                                    name="./linkTarget"
                                                    text="Link to New tab"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                                <column1
                                                        granite:class="navigation-root-config"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <navigationRoot
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel=" Navigation Root"
                                                                fieldDescription="Enter link"
                                                                jcr:primaryType="nt:unstructured"
                                                                rootPath="/content/techdata"
                                                                name="./navigationRoot" />
                                                    </items>
                                                </column1>
												<enableSecondaryIcon
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        text="Enable Secondary Menu Icons"
                                                        fieldDescription="Enable Secondary Menu Icons"
                                                        jcr:primaryType="nt:unstructured"
														uncheckedValue="false"
                                                        value="true"
                                                        name="./enableSecondaryIcon" />
												<enableUIServiceEndPoint
                                                         granite:class="cq-dialog-checkbox-showhide"
                                                         jcr:primaryType="nt:unstructured"
                                                         sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                         fieldLabel="Enable UI Service EndPoint?"
                                                         name="./enableUIServiceEndPoint"
                                                         text="Enable UI Service EndPoint?"
                                                         value="true">
												    	<granite:data
														jcr:primaryType="nt:unstructured"
														cq-dialog-checkbox-showhide-target=".ui-service-config"/>
												</enableUIServiceEndPoint>
                                                <column
                                                        granite:class="ui-service-config"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <UIServiceEndPoint
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="UI Service End Point"
                                                                name="./UIServiceEndPoint"/>
                                                        <externalUrl
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="External URL"
                                                                name="./externalUrl"/>
                                                        <sessionID
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="session ID"
                                                                name="./sessionID"/>

                                                    </items>
                                                </column>
											</items>
                                        </column>
                                    </items>
                                </field>
                            </actions>
                        </items>
                    </menuList>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
