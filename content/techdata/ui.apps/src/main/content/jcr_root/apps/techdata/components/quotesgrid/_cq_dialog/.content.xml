<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <properties
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Properties"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <label
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Label"
                                                name="./label"/>
                                            <uiService
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="UI Service End Point"
                                                name="./uiServiceEndPoint"/>
											<itemsPerPage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Items Per Page"
                                                name="./itemsPerPage"/>
											<quoteDetailUrl
												 sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
												 fieldLabel="Link"
												 fieldDescription="Enter link"
												 jcr:primaryType="nt:unstructured"
												 rootPath="/content/techdata"
												 name="./quoteDetailUrl" />
											<paginationStyle
											   jcr:primaryType="nt:unstructured"
											   sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
											   fieldLabel="Select Pagination Style"
											   name="./paginationStyle">
												<items jcr:primaryType="nt:unstructured">
													<pages
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Pages"
                                                        value="pages"/>
													<scroll
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Scroll"
                                                        value="scroll"/>
													<none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None"
                                                        value="none"/>
												</items>
											</paginationStyle>
                                        </items>
                                    </column>
                                </items>
                            </properties>
                            <elements
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Items"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <actions
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Click 'Add' to add labels">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./columnList">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <columnLabel
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Enter column label"
                                                                    fieldLabel="Column Label"
                                                                    name="./columnLabel"/>
																<columnKey
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Enter Column key for the column"
                                                                    fieldLabel="Column Key"
                                                                    name="./columnKey"/>
																<sortable
																	   jcr:primaryType="nt:unstructured"
																	   sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
																	   name="./sortable"
																	   text="Sortable"
																	   uncheckedValue="false"
																	   value="{Boolean}true"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </actions>
                                        </items>
                                    </column>
                                </items>
                            </elements>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
