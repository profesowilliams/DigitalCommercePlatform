<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Edit Config Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title"
                        required="{Boolean}true"
                        name="./title"/>
                    <placeholderText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Placeholder Text"
                        name="./placeholderText"/>
                    <buttonLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Button Label"
                        required="{Boolean}true"
                        name="./buttonLabel"/>
                    <buttonLinkType
					   jcr:primaryType="nt:unstructured"
					   sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
					   fieldLabel="Choose Button Link Type External/Internal"
                       required="{Boolean}true"
					   name="./buttonLinkType">
						<items jcr:primaryType="nt:unstructured">
							<internal
                               jcr:primaryType="nt:unstructured"
                               checked="{Boolean}true"
                               text="Internal"
                               value="internal"/>
							<external
                               jcr:primaryType="nt:unstructured"
                               text="External"
                               value="external"/>
						</items>
					</buttonLinkType>
                    <buttonLinkExternal
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Button Link External"
                        name="./buttonLinkExternal"/>
                    <buttonLinkInternal
						 sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
						 fieldLabel="Button Link Internal"
						 jcr:primaryType="nt:unstructured"
						 rootPath="/content/techdata"
						 name="./buttonLinkInternal"/>
                    <criteria
						 sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						 fieldLabel="Enter criteria Value [PAY/CUS/STA/BTA/ALL]"
						 jcr:primaryType="nt:unstructured"
                         required="{Boolean}true"
						 name="./criteria"/>
                    <ignoreSalesOrganization
					   jcr:primaryType="nt:unstructured"
					   sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
					   fieldLabel="Ignore Sales Organization?"
                       required="{Boolean}true"
					   name="./ignoreSalesOrganization">
						<items jcr:primaryType="nt:unstructured">
							<true
                               jcr:primaryType="nt:unstructured"
                               text="True"
                               value="true"/>
							<false
                               jcr:primaryType="nt:unstructured"
                               text="False"
                               value="false"/>
						</items>
					</ignoreSalesOrganization>
                    <isDefault
					   jcr:primaryType="nt:unstructured"
					   sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
					   fieldLabel="Is Default?"
                       required="{Boolean}true"
					   name="./isDefault">
						<items jcr:primaryType="nt:unstructured">
							<true
                               jcr:primaryType="nt:unstructured"
                               text="True"
                               value="true"/>
							<false
                               jcr:primaryType="nt:unstructured"
                               text="False"
                               value="false"/>
						</items>
					</isDefault>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
