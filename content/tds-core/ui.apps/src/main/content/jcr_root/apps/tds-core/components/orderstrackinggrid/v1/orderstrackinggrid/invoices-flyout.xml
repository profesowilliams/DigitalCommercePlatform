<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <invoicesFlyoutGroup
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/well">
            <items jcr:primaryType="nt:unstructured">
                <invoicesFlyoutTitle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Invoices Flyout Title"
                    name="./invoicesFlyoutTitle"/>
                <invoicesFlyoutDescription
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Invoices Flyout Description"
                    name="./invoicesFlyoutDescription"/>
                <invoicesFlyoutOrderNo
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Invoices Flyout Order No Label"
                    name="./invoicesFlyoutOrderNo"/>
                <invoicesFlyoutButton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Invoices Flyout Button Label"
                    name="./invoicesFlyoutButton"/>
                <invoicesFlyoutClearAllButton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Invoices Flyout Clear All Button Label"
                    name="./invoicesFlyoutClearAllButton"/>
                <columnsConfigurations
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                    composite="{Boolean}true"
                    fieldDescription="Click 'Add' to add labels"
                    fieldLabel="Invoice Columns Definition">
                    <field
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        name="./invoiceColumnList">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <columnLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter column label"
                                        fieldLabel="Column Label"
                                        name="./columnLabel"
                                        required="{Boolean}true" />
                                    <columnKey
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter Column key for the column"
                                        fieldLabel="Column Key"
                                        name="./columnKey"
                                        required="{Boolean}true" />
                                </items>
                            </column>
                        </items>
                    </field>
                </columnsConfigurations>
            </items>
        </invoicesFlyoutGroup>
    </items>
</jcr:root>
