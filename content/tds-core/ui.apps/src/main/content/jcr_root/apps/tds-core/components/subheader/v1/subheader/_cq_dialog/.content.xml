<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Subheader"
    extraClientlibs="[core.wcm.components.commons.editor.dialog.childreneditor.custom.v1,demo.editor,core.wcm.components.tabs.v1.editor,tds.authoring.components.editor.colorswatches]">
    <content
        granite:class="cmp-dialog-swatches__editor"
        jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <properties jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="id"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                label="Title"
                                                name="./subheaderTitle"/>
                                            <fontcolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="id"
                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                path="tds-core/components/authoring/dialog/colorswatches/tab_dialog/container"/>
                                            <logo
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="id"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Adding a logo will replace any title added previously."
                                                fieldLabel="Logo"
                                                name="./subheaderLogo"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <tabitems jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tabitems
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/apps/techdata/components/childreneditor"/>
                                            <container
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <tabsColor
                                                        granite:hide="${!cqDesign.fontColorEnabled || cqDesign.fontColorSwatchesOnly}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                        fieldLabel="Tabs Color"
                                                        name="./tabsColor"
                                                        showDefaultColors="{Boolean}false"
                                                        showProperties="{Boolean}true"
                                                        showSwatches="{Boolean}true">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                                    </tabsColor>
                                                    <tabsColorSwatchesOnly
                                                        granite:hide="${!cqDesign.fontColorEnabled || !cqDesign.fontColorSwatchesOnly}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                        fieldLabel="Tabs Color"
                                                        name="./tabsColor"
                                                        showDefaultColors="{Boolean}false"
                                                        showProperties="{Boolean}false"
                                                        showSwatches="{Boolean}true"
                                                        variant="swatch">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cmp-dialog-edit-hook="fontColorSwatchesOnly"/>
                                                    </tabsColorSwatchesOnly>
                                                </items>
                                            </container>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tabitems>
                </items>
            </tabs>
            <include-clientlib
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                js="cq.include"/>
        </items>
    </content>
</jcr:root>
