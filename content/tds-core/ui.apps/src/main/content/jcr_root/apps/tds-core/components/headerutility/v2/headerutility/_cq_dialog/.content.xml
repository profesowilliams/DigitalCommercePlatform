<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header Utility"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <hideSiginComponent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            fieldDescription="On selection hides the component. Component shown by default."
                            name="./hideSiginComponent"
                            text="Hide Sigin Component"
                            uncheckedValue="false"
                            value="true"/>
                    <hideMiniCartComponent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            fieldDescription="On selection hides the component. Component shown by default."
                            name="./hideMiniCartComponent"
                            text="Hide Mini Cart Component"
                            uncheckedValue="false"
                            value="true"/>
                    <hideLangNavComponent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            fieldDescription="On selection hides the component. Component shown by default."
                            name="./hideLangNavComponent"
                            text="Hide Lang Nav Component"
                            uncheckedValue="false"
                            value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>

