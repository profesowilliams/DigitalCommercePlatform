{
  "extends": "stylelint-config-standard-scss",
  "rules":
    {
      "max-nesting-depth": 3
    },
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "tds-*",
          "hover",
          "active",
          "visited",
          "focus",
          "disabled"
        ]
      }
    ]
}