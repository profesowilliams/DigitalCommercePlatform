<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Common Analytics"
    sling:resourceType="granite/ui/components/coral/foundation/container"
    margin="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
        <columns
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <analyticsCategory
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Set to the category of clicks such as internal campaign, mastheader, normal link, onsite ads. Note â€“ internal campaigns are same as internal site promotions and can be shown by usage of display ads, hero-carousels "
                            fieldLabel="Analytics Category"
                            name="./analyticsCategory"
                            value=""/>
                        <analyticsRegion
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Set to the region of the item clicked. In case of no region to be specified, populate empty string''Eg:  navigation, hero"
                                fieldLabel="Analytics Region"
                                name="./analyticsRegion"
                                value=""/>
                    </items>
                </column>
            </items>
        </columns>
    </items>
</jcr:root>
